<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchView2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="14dp"
        android:background="@drawable/back_grey_radius"
        android:iconifiedByDefault="false"
        android:queryBackground="@null"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/wishlist_btn2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:queryHint="Shop 검색" />

    <ImageView
        android:id="@+id/wishlist_btn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_wishlist"
        app:layout_constraintEnd_toStartOf="@+id/menu_btn2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_btn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_action_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#BBBBBB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView2" />


</androidx.constraintlayout.widget.ConstraintLayout>